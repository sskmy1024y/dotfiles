# Dockerfile for testing dotfiles installation on Ubuntu
FROM ubuntu:latest

# Install prerequisites
RUN apt-get update && apt-get install -y \
    curl \
    git \
    sudo \
    make \
    shellcheck \
    ncurses-bin \
    # Additional packages for Bats testing
    bash \
    coreutils \
    findutils \
    grep \
    sed \
    file \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Create test user with sudo privileges
RUN useradd -m -s /bin/bash testuser && \
    echo "testuser:password" | chpasswd && \
    usermod -aG sudo testuser && \
    echo "testuser ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Switch to test user
USER testuser
WORKDIR /home/testuser

# Set environment variables
ENV USER=testuser
ENV HOME=/home/testuser
ENV TERM=xterm-256color

# Copy test script
COPY test_install.sh /home/testuser/test_install.sh
RUN sudo chown testuser:testuser /home/testuser/test_install.sh && \
    sudo chmod +x /home/testuser/test_install.sh

# Default command
CMD ["/bin/bash"]